package Projeto;

import java.util.Scanner;

public class Funcionario extends Pessoa {
	
	// ATRIBUTOS
	private String matriculo;
	
	// GET E SET
	public String getMatriculo() {
		return matriculo;
	}

	public void setMatriculo(String matriculo) {
		this.matriculo = matriculo;
	}
	
	// CONSTRUTOR
	Funcionario(){}
	Funcionario(String nome, String telefone, String email, String m){
		super(nome, telefone, email);
		this.matriculo = m;
	}
	
	// METODOS
	public Aluno cadastrarAluno() {
		Aluno aluno01 = new Aluno();
		
		Scanner leia = new Scanner(System.in);
		System.out.println("-------------------");
		System.out.println("| CADASTRAR ALUNO |");
		System.out.println("-------------------");
		System.out.println("Nome: ");
		nome = leia.nextLine();
		aluno01.setNome(nome);
		System.out.println("Telefone: ");
		telefone = leia.nextLine();
		aluno01.setTelefone(telefone);
		System.out.println("Email: ");
		email = leia.nextLine();
		aluno01.setEmail(email);
		System.out.println("Ano de Nascimento: ");
		int anoNascimento = leia.nextInt();
		aluno01.setAnoNascimento(anoNascimento);
		leia.nextLine();
		System.out.println("RG: ");
		String rg = leia.nextLine();
		aluno01.setRg(rg);
		return aluno01;
	}
	
	public boolean cancelarCadastro(boolean mens) {
		mens = false;
		if (mens == false) {
			System.out.println("PAGAMENTO PENDENTE");
		} else {
			System.out.println("CANCELAMENTO EXECUTADO COM SUCESSO!!");
		}
		return cancelarCadastro(mens);
	}
	
	
	

	
	
}
