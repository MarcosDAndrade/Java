package Projeto;

public class Aluno extends Pessoa{
	// ATRIBUTOS
	private int anoNascimento;
	private String rg;
	
	// GET E SET
	public int getAnoNascimento() {
		return anoNascimento;
	}
	public void setAnoNascimento(int anoNascimento) {
		this.anoNascimento = anoNascimento;
	}
	
	public String getRg() {
		return rg;
	}
	public void setRg(String rg) {
		this.rg = rg;
	}
	
	// CONSTRUTORES
	Aluno(){}
	Aluno(String nome, String telefone, String email, int an, String rg){
		super(nome, telefone, email);
		this.anoNascimento = an;
		this.rg = rg;
	}
	
	// METODOS
	public boolean pagarMensalidade(boolean mens) {
		mens = true;
		System.out.println("PAGAMENTO EFETUADO COM SUCESSO");
		return pagarMensalidade(mens); 
	}
	
	public static void imprimeDados(Aluno aluno) {
		Sistema.imprimirInterface("ALUNO");
		System.out.println("Nome: " + aluno.getNome() + "\n"
							+ "Telefone: " + aluno.getTelefone() + "\n"
							+ "Email: " + aluno.getEmail() + "\n"
							+ "Ano Nascimento: " + aluno.getAnoNascimento() + "\n"
							+ "RG: " + aluno.getRg() + "\n"
							+ "Idade: " + (2022 - aluno.getAnoNascimento()));
	}
	
	
}
